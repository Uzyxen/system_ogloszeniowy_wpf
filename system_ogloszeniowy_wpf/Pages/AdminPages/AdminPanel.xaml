<Page x:Class="system_ogloszeniowy_wpf.Pages.AdminPages.AdminPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:system_ogloszeniowy_wpf.Pages.AdminPages"
      mc:Ignorable="d" 
      d:DesignHeight="675" d:DesignWidth="1200"
      Title="AdminPanel" Background="White">

    <StackPanel>
        <Button Click="GoToHomePageClicked" HorizontalAlignment="Left" Width="30" Background="Transparent">
            <Button.Content>
                <Image Source="../../Assets/left_arrow.png"/>
            </Button.Content>
        </Button>

        <Label Content="Panel admina" FontSize="40" FontWeight="Bold" HorizontalAlignment="Center"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Cursor="Hand" Click="GoToAdminOffers" Background="Transparent" Padding="20">
                <Button.Content>
                    <Image Source="../../Assets/briefcase.png"/>
                </Button.Content>
            </Button>
            <Button Cursor="Hand" Click="GoToAdminUsers" Background="Transparent" Margin="5, 0, 0, 0">
                <Button.Content>
                    <Image Source="../../Assets/user.png"/>
                </Button.Content>
            </Button>
        </StackPanel>
    </StackPanel>
</Page>
