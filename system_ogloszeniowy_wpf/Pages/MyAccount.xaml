<Page x:Class="system_ogloszeniowy_wpf.Pages.MyAccount"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:system_ogloszeniowy_wpf.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="675" d:DesignWidth="1200"
      Title="MyAccount" Background="White">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal">
            <StackPanel>
                <Border Background="Gray" CornerRadius="100" Width="180" Height="180">
                    <Viewbox/>
                </Border>
                <Label Content="{Binding Stanowisko}" HorizontalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="{Binding Imie}" FontSize="20"/>
                <Label Content="{Binding Nazwisko}" FontSize="20"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
